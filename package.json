{
	"name": "apearson-website",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"gen": "hexo generate -w",
		"serve": "webpack-dev-server --config webpack.config.js --progress --color",

		"build": "npm run build:cdn & npm run build:scripts && hexo generate",
		"build:scripts": "webpack --config webpack.config.js --env=production",
		"build:cdn": "cp ./netlify/* ./public/",
		"rebuild": "npm run clean && npm run build",

		"debug": "npm run serve & npm run gen",

		"clean": "rm -r public db.json"
	},
	"hexo": {
		"version": "3.7.1"
	},
	"dependencies": {
		"chart.js": "^2.7.2"
	},
	"devDependencies": {
		"@types/chart.js": "^2.7.10",
		"hexo": "^3.2.0",
		"hexo-generator-archive": "^0.1.4",
		"hexo-generator-category": "^0.1.3",
		"hexo-generator-index": "^0.2.0",
		"hexo-generator-tag": "^0.2.0",
		"hexo-renderer-ejs": "^0.3.0",
		"hexo-renderer-marked": "^0.3.0",
		"hexo-renderer-stylus": "^0.3.1",
		"ts-loader": "^4.1.0",
		"typescript": "^3.0.0-dev.20180623",
		"uglifyjs-webpack-plugin": "^1.2.4",
		"webpack": "^4.2.0",
		"webpack-cli": "^2.0.12",
		"webpack-dev-server": "^3.1.1",
		"webpack-merge": "^4.1.2"
	}
}
